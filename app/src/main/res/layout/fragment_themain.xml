<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containermain">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/activity_cardinal_logo"
            android:contentDescription="@string/content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:paddingBottom="@dimen/twenty_dp"
            android:src="@drawable/flagtz"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/twenty_dp"/>

        <TextView
            android:id="@+id/activity_countdown_timer_note"
            android:layout_below="@id/activity_cardinal_logo"
            android:textColor="@color/mid_gray"
            android:tag="Light"
            android:textSize="24dp"
            android:text="Mimi nataka maendeleo wewe je!!! Chagua Lowassa mtetezi wa wawanyonge"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/activity_countdown_wheels_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:paddingTop="@dimen/twenty_dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_below="@+id/activity_countdown_timer_note">

            <LinearLayout
                android:id="@+id/activity_countdown_labels_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fifteen_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:orientation="horizontal"
                android:layout_below="@id/activity_countdown_wheels_layout" >

                <TextView
                    android:id="@+id/activity_countdown_timer_days_text"
                    android:textColor="@color/accentColor"
                    android:tag="Thin"

                    android:textSize="@dimen/twenty_sp"
                    android:text="@string/days"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_countdown_timer_hours_text"
                    android:textColor="@color/center_text"
                    android:tag="Thin"
                    android:textSize="@dimen/twenty_sp"
                    android:text="@string/hours"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_countdown_timer_minutes_text"
                    android:textColor="#000000"
                    android:tag="Thin"
                    android:textSize="@dimen/twenty_sp"
                    android:text="@string/minutes"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_countdown_timer_seconds_text"
                    android:textColor="@color/center_text"
                    android:tag="Thin"
                    android:textSize="@dimen/twenty_sp"
                    android:text="@string/seconds"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_display_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fifteen_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:orientation="horizontal"
                android:layout_below="@id/activity_countdown_wheels_layout" >

                <TextView
                    android:id="@+id/activity_display_timer_days_text"
                    android:textColor="@color/accentColor"
                    android:tag="Thin"

                    android:textSize="30dp"
                    android:text="@string/days"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_display_timer_hours_text"
                    android:textColor="@color/center_text"
                    android:tag="Thin"
                    android:textSize="30dp"
                    android:text="@string/hours"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_display_timer_minutes_text"
                    android:textColor="#000000"
                    android:tag="Thin"
                    android:textSize="30dp"
                    android:text="@string/minutes"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/activity_display_timer_seconds_text"
                    android:textColor="@color/center_text"
                    android:tag="Thin"
                    android:textSize="30dp"
                    android:text="@string/seconds"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>
</LinearLayout>